{
  "name": "amlkyc-bot",
  "version": "1.0.0",
  "description": "A Discord bot for performing users verifications (AML, KYC) checks",
  "main": "app.js",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "start": "node ./dist/app.js",
    "start-server": "npm run build && npm run start",
    "dev": "NODE_ENV=dev; tsc-watch --onSuccess \"node ./dist/app.js\"",
    "test": "NODE_ENV=test; npx jest --verbose --passWithNoTests",
    "testw": "NODE_ENV=test; npx jest --watch --passWithNoTests",
    "testc": "NODE_ENV=test; npx jest --coverage --verbose",
    "lint": "npx eslint . --ext .ts",
    "lint-and-fix": "npx eslint . --ext .ts --fix",
    "clean": "rm -rf dist coverage &>/dev/null"
  },
  "author": "Yeramin, Bogdan",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.1",
    "discord-interactions": "^3.2.0",
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "node-fetch": "^2.6.7",
    "pino": "^8.7.0",
    "pino-http": "^8.2.1",
    "pino-pretty": "^9.1.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.3.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@types/node-fetch": "^2.6.2",
    "@types/swagger-jsdoc": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^29.0.3",
    "tsc-watch": "^5.0.3",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  }
}
